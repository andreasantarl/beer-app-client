<form class="beer-display" id="beer-profile" data-id="{{beer.id}}" enctype="multipart/form-data">
  <fieldset class="form-group">
    Beer name: <input class="form-control" type="text" name=beers[beer_name] placeholder="Beer name" value="{{beer.beer_name}}" />
    Brewer: <input class="form-control" type="text" name=beers[company_name] placeholder="Brewer" value="{{beer.company_name}}" />
    Style: <input class="form-control" type="text" name=beers[beer_style] placeholder="Style" value="{{beer.beer_style}}" />
    ABV: <input class="form-control" type="numeric" name=beers[abv] placeholder="ABV(%)" value="{{beer.abv}}" />
    Notes: <textarea class="form-control" type="textarea" name=beers[notes] placeholder="Notes" value="{{beer.notes}}" /></textarea>
    Appearance: <textarea class="form-control" type="textarea" name=beers[appearance] placeholder="Appearance" value="{{beer.appearance}}" /></textarea>
    Aroma: <textarea class="form-control" type="textarea" name=beers[aroma] placeholder="Aroma" value="{{beer.aroma}}" /></textarea>
    Palate: <textarea class="form-control" type="textarea" name=beers[palate] placeholder="Palate" value="{{beer.palate}}" /></textarea>
    Flavor: <textarea class="form-control" type="textarea" name=beers[flavor] placeholder="Flavor" value="{{beer.flavor}}" /></textarea>
    Photo: <input class="form-control" type="file" name=beers[photo] placeholder="Profile Picture" value="{{beer.photo}}" />
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <button type="submit" class="create-edit-beer btn btn-default">Save</button>
    </div>
  </fieldset>
</form>
